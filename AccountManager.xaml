<Window x:Class="MRI.AccountManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Account Manager" Height="400" Width="500" WindowStyle="None" Background="#FF0C0C0C" ResizeMode="NoResize" MouseDown="Window_MouseDown">
    <Grid>
        <Label Content="ACCOUNT MANAGER" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FF9B62F9" FontFamily="Calibri" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"/>
        <Button x:Name="CloseBtn" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Height="30" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" Click="CloseBtn_Click" FontSize="16"/>
        
        <Label Content="Username:Password (one per line)" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontFamily="Calibri Light" Margin="20,50,0,0"/>
        <TextBox x:Name="AccountsTextBox" HorizontalAlignment="Left" Margin="20,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="460" Height="200" Background="#FF1A1A1A" Foreground="White" BorderBrush="#FF9B62F9" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        
        <Button x:Name="SaveBtn" Content="Save Accounts" HorizontalAlignment="Left" Margin="20,300,0,0" VerticalAlignment="Top" Width="150" Height="35" Background="#FF9B62F9" Foreground="White" FontFamily="Calibri" FontSize="14" Click="SaveBtn_Click" BorderBrush="{x:Null}"/>
        <Button x:Name="LoadBtn" Content="Load Accounts" HorizontalAlignment="Left" Margin="190,300,0,0" VerticalAlignment="Top" Width="150" Height="35" Background="#FF6B42C9" Foreground="White" FontFamily="Calibri" FontSize="14" Click="LoadBtn_Click" BorderBrush="{x:Null}"/>
        
        <Label x:Name="StatusLabel" Content="" HorizontalAlignment="Left" Margin="20,345,0,0" VerticalAlignment="Top" Foreground="#FF737373" FontFamily="Calibri Light"/>
    </Grid>
</Window>
